# EditorConfig helps ensure a consistent formatting style across editors: https://editorconfig.org/

# This is the top-most EditorConfig file
root = true

[*]
# Encode all text using UTF-8
charset = utf-8

# Use the LF character as line terminator
end_of_line = lf

# Insert an extra newline at the end of all files
insert_final_newline = true
# Remove extra trailing whitespace
trim_trailing_whitespace = true
